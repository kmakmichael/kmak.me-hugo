<div class="tree">
	{{- $.Scratch.Set "idx" 1 -}}
	<ul class="tree"><a href="/">home</a>
	{{ $all_pgs := where .Site.Pages "IsPage" false}}
	{{- range where $all_pgs "Params.depth" ">=" 1 }}
		<li>
			{{- strings.Repeat (sub .Params.depth 1) "│ " -}}
			{{ $last := eq ($.Scratch.Get "idx") (len $.Site.Sections) -}}
			{{- if  $last -}}
				{{- print "└ " -}}
			{{- else -}}
				{{- print "├ " -}}
			{{- end -}}
			<a href={{.Permalink}}>{{- lower .Title -}}</a>
		</li>
		{{- if and (eq . $.Parent) ($.IsPage) }}
		<li>
			{{- if $last -}}
				{{- strings.Repeat .Params.depth "  " -}}
			{{- else -}}
				{{- strings.Repeat .Params.depth "│ " -}}
			{{- end -}}
			{{- print "└ " -}}
			<a href={{$.Permalink}}>{{- lower $.Title -}}</a></li>
		{{- end -}}
		{{- $.Scratch.Set "idx" (add 1 ($.Scratch.Get "idx")) -}}
	{{- end }}
	</ul>
</div>